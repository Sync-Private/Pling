fun playnote #note #duration [
    // #audio.sine.volume sine, 0;
    // #sleep 2;
    // #audio.sine.volume sine, 1;
    // #audio.sine.frequency sine, note;
    // #sleep duration;
    var handle = #audio.new;
    var sine = #audio.sine.new;
    #audio.sine.volume sine, 1;
    #audio.bindsource handle, sine;
    #audio.sine.frequency sine, note;
    #audio.start handle;
    #sleep duration;
    #audio.stop handle;
    #sleep 400;
]



